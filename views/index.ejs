<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <title>URL Shortener</title>
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .container-main {
      max-width: 1000px;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }
    .card-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 15px 15px 0 0;
      padding: 30px;
      border: none;
    }
    h1 {
      font-weight: 700;
      margin-bottom: 10px;
    }
    .subtitle {
      font-size: 0.95rem;
      opacity: 0.95;
    }
    .card-body {
      padding: 40px;
    }
    .form-group label {
      font-weight: 600;
      color: #333;
      margin-bottom: 10px;
    }
    .form-control {
      border-radius: 8px;
      border: 2px solid #e0e0e0;
      padding: 12px 15px;
      font-size: 0.95rem;
      transition: all 0.3s ease;
    }
    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 8px;
      padding: 12px 30px;
      font-weight: 600;
      transition: all 0.3s ease;
      margin-top: 23px;
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    .alert {
      border-radius: 8px;
      border: none;
      margin-bottom: 20px;
    }
    .alert-success {
      background-color: #d4edda;
      color: #155724;
    }
    .alert-danger {
      background-color: #f8d7da;
      color: #721c24;
    }
    .table-container {
      margin-top: 30px;
    }
    .table {
      border-radius: 8px;
      overflow: hidden;
    }
    .table thead th {
      background: #f8f9fa;
      border: none;
      padding: 15px;
      font-weight: 600;
      color: #333;
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
    }
    .table tbody td {
      padding: 15px;
      border-color: #e9ecef;
      vertical-align: middle;
    }
    .table tbody tr:hover {
      background-color: #f8f9fa;
    }
    .url-cell {
      max-width: 350px;
      word-break: break-all;
      font-size: 0.9rem;
    }
    .url-cell a {
      color: #667eea;
      text-decoration: none;
    }
    .url-cell a:hover {
      text-decoration: underline;
    }
    .short-code {
      font-weight: 600;
      color: #764ba2;
      font-family: 'Courier New', monospace;
      font-size: 0.95rem;
    }
    .short-link {
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .short-link a {
      color: #667eea;
      text-decoration: none;
      font-weight: 600;
    }
    .short-link a:hover {
      text-decoration: underline;
    }
    .copy-btn, .delete-btn {
      padding: 5px 10px;
      font-size: 0.85rem;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    .copy-btn {
      background-color: #e3f2fd;
      color: #1976d2;
    }
    .copy-btn:hover {
      background-color: #bbdefb;
    }
    .delete-btn {
      background-color: #ffebee;
      color: #c62828;
    }
    .delete-btn:hover {
      background-color: #ffcdd2;
    }
    .badge-clicks {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 5px 12px;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.85rem;
    }
    .empty-state {
      text-align: center;
      padding: 40px 20px;
      color: #999;
    }
    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 15px;
      opacity: 0.5;
    }
    .success-message {
      display: none;
      position: fixed;
      top: 20px;
      right: 20px;
      background: #4caf50;
      color: white;
      padding: 15px 25px;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      z-index: 1000;
      animation: slideIn 0.3s ease;
    }
    @keyframes slideIn {
      from {
        transform: translateX(400px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    @media (max-width: 768px) {
      .table {
        font-size: 0.85rem;
      }
      .table thead th, .table tbody td {
        padding: 10px 5px;
      }
      .url-cell {
        max-width: 150px;
        font-size: 0.8rem;
      }
      .card-body {
        padding: 20px;
      }
      .card-header {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="container container-main">
    <!-- Header -->
    <div class="card mb-4">
      <div class="card-header">
        <h1><i class="fas fa-link"></i> URL Shortener</h1>
        <p class="subtitle mb-0">Create short, shareable links from long URLs</p>
      </div>
    </div>

    <!-- Main Card -->
    <div class="card">
      <div class="card-body">
        <!-- Error Alert -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle"></i> <%= error %>
          </div>
        <% } %>

        <!-- URL Form -->
        <form id="urlForm" class="form-inline">
          <div class="form-group w-100">
            <label for="fullUrl" class="w-100 mb-2">Enter URL to Shorten:</label>
            <div class="input-group w-100">
              <input 
                required 
                placeholder="https://example.com/very/long/url" 
                type="url" 
                name="fullUrl" 
                id="fullUrl" 
                class="form-control"
                autocomplete="off">
              <div class="input-group-append">
                <button class="btn btn-primary" type="submit" id="submitBtn">
                  <i class="fas fa-compress"></i> Shorten
                </button>
              </div>
            </div>
            <small class="form-text text-muted mt-2">
              <i class="fas fa-info-circle"></i> Enter a valid URL to create a shortened link
            </small>
          </div>
        </form>

        <!-- URLs Table -->
        <div class="table-container">
          <% if (shortUrls && shortUrls.length > 0) { %>
            <h4 class="mb-3"><i class="fas fa-list"></i> Your Shortened URLs</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th width="35%">Full URL</th>
                    <th width="25%">Short Link</th>
                    <th width="15%">Clicks</th>
                    <th width="25%">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                      <td class="url-cell">
                        <a href="<%= shortUrl.full %>" target="_blank" title="<%= shortUrl.full %>">
                          <%= shortUrl.full %>
                        </a>
                      </td>
                      <td>
                        <div class="short-link">
                          <a href="<%= baseUrl %>/<%= shortUrl.short %>" target="_blank" class="short-code">
                            <%= baseUrl %>/<%= shortUrl.short %>
                          </a>
                        </div>
                      </td>
                      <td>
                        <span class="badge badge-clicks"><%= shortUrl.clicks %></span>
                      </td>
                      <td>
                        <button class="copy-btn" onclick="copyToClipboard('<%= baseUrl %>/<%= shortUrl.short %>')">
                          <i class="fas fa-copy"></i> Copy
                        </button>
                        <button class="delete-btn" onclick="deleteUrl('<%= shortUrl._id %>')">
                          <i class="fas fa-trash"></i> Delete
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="empty-state">
              <div class="empty-state-icon">
                <i class="fas fa-link"></i>
              </div>
              <p>No shortened URLs yet. Create one to get started!</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Message -->
  <div id="successMessage" class="success-message"></div>

  <script>
    // Handle form submission
    document.getElementById('urlForm').addEventListener('submit', async (e) => {
      e.preventDefault()
      const fullUrl = document.getElementById('fullUrl').value.trim()
      const submitBtn = document.getElementById('submitBtn')
      submitBtn.disabled = true
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...'

      try {
        const response = await fetch('/shortUrls', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ fullUrl: fullUrl })
        })

        const data = await response.json()

        if (response.ok) {
          showSuccessMessage('URL shortened successfully! Reloading...')
          setTimeout(() => window.location.reload(), 1500)
        } else {
          showSuccessMessage(data.error || 'Error creating short URL', 'error')
        }
      } catch (error) {
        console.error('Error:', error)
        showSuccessMessage('Error: ' + error.message, 'error')
      } finally {
        submitBtn.disabled = false
        submitBtn.innerHTML = '<i class="fas fa-compress"></i> Shorten'
      }
    })

    // Copy to clipboard function
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(() => {
        showSuccessMessage('✓ Link copied to clipboard!')
      }).catch(err => {
        console.error('Failed to copy:', err)
        showSuccessMessage('Failed to copy', 'error')
      })
    }

    // Delete URL function
    function deleteUrl(id) {
      if (confirm('Are you sure you want to delete this shortened URL?')) {
        fetch(`/shortUrls/${id}`, {
          method: 'DELETE'
        }).then(response => {
          if (response.ok) {
            showSuccessMessage('✓ URL deleted successfully! Reloading...')
            setTimeout(() => window.location.reload(), 1500)
          } else {
            showSuccessMessage('Error deleting URL', 'error')
          }
        }).catch(error => {
          console.error('Error:', error)
          showSuccessMessage('Error: ' + error.message, 'error')
        })
      }
    }

    // Show success/error message
    function showSuccessMessage(message, type = 'success') {
      const messageDiv = document.getElementById('successMessage')
      messageDiv.textContent = message
      messageDiv.style.background = type === 'success' ? '#4caf50' : '#f44336'
      messageDiv.style.display = 'block'
      setTimeout(() => {
        messageDiv.style.display = 'none'
      }, 4000)
    }
  </script>
</body>
</html>